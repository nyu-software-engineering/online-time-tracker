{
    "name": "Otter",
    "manifest_version": 2,
    "version": "1.4.2",

    "name": "Otter plugin",
    "description": "Discover how much time you spend on your favourite websites!! ",
    "background":
    {

        "scripts": ["functions.js","background.js"],
        "persistent": true
    },
    "browser_action":
    {
        "default title": "Otter",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "optional_permissions": ["<all_urls>"],
    "permissions": [
        "background",
        "tabs",
        "storage",
        "idle",
        "unlimitedStorage",
        "http://*/*",
        "https://*/*"
    ]
}